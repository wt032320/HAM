/* components/RecordCard/RecordCard.wxss */
.card-item {
    height: 240rpx;
    margin-bottom: 20rpx;
    border-radius: 15rpx;
    background-color: #fff;
}

.title-wrap {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
    padding-top: 20rpx;
}

.title-wrap .title-content {
    width: 170rpx;
}
.title-wrap .tag-content {
    margin-left: 30rpx;
}

.title-wrap .right-wrap {
    margin-left: 200rpx;
    color: #3399CC;
}

.content-wrap {
    display: flex;
    margin: 40rpx 0 40rpx 20rpx;
}

.time-wrap {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}

.time-wrap .time-content {
    margin-left: 20rpx;
    color: rgb(112, 111, 111);
}