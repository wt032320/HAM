/* pages/newblog/newblog.wxss */
@import "../../common/lib/weui.wxss";
@import "../../assets/iconfont.wxss";


.nblog-wrap {
    width: 100vw;
    min-height: 100vh;
    box-sizing: border-box;
    background-color: #eee;
}

.top-bar {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
}

.top-bar .content {
    font-size: 40rpx;
    color: #303133;
    margin-left: 3vw;
}

.top-bar .btn {
    margin-right: 3vw;
}

.main-wrap {
    width: 96vw;
    margin: 100rpx 0 0 2vw;
    padding-top: 20rpx;
    border: 1rpx solid #fff;
}

.category-wrap {
    display: flex;
    justify-content: space-between;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
}

.tips {
    width: 60%;
    margin-left: 2vw;
}

.category-wrap .drap {
    width: 40%;
}

.upload-wrap {
    display: flex;
    justify-content: space-between;
    width: 96vw;
    height: 200rpx;
    line-height: 200rpx;
    margin-top: 20rpx;
    background-color: #fff;
}

.upload-wrap .select {
    width: 70%;
    height: 200rpx;
    margin-top: 24rpx;
}

.title-wrap {
    width: 96vw;
    margin-top: 20rpx;
    background-color: #fff;
}

.title-wrap .tips {
    width: 95%;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #dfdfdf;
}


.abstract-wrap {
    width: 96vw;
    margin-top: 20rpx;
    background-color: #fff;
}

.abstract-wrap .tips {
    width: 95%;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #dfdfdf;
}

.container {
  width: 96vw;
  /* padding-bottom: 50rpx; */
  margin-top: 20rpx;
  margin-bottom: 120rpx;
  padding: 0;
  background-color: #fff;
  border-top: 1px solid #dfdfdf;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  /* overflow: auto; */
  padding: 10rpx 10rpx 20rpx 10rpx;
  border: 1px solid #ECECEC;
  border-top: 0;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
  background-color: #fff;
}