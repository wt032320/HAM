.userInfo {
  box-sizing: border-box;
  height: 100vh;
  background-color: #eeeeee;
}

.info-top {
  display: flex;
  justify-content: center;
  width: 100vw;
  height: 22vh;
}

.info-wrap {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 87%;
  margin-top: 5vh;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background-color: #ffffff;
}

.userAvatar {
  width: 120rpx;
  height: 120rpx;
  margin: 0 40rpx;
}

.image {
  width: 120rpx;
  height: 120rpx;
}


.info-middle {
  display: flex;
  justify-content: center;
  width: 100%;
}

.content {
  width: 94%;
  background-color: #fff;
  border-radius: 15rpx;
}

.content-info {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 90%;
  height: 90rpx;
  margin-left: 4.5vw;
}

.userinfo-wrap {
  width: 86%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 90rpx;
  font-size: 30rpx;
}

.info-content {
  display: inline-block;
  overflow: hidden;
  width: 50vw;
  white-space: nowrap;
  text-align: right;
  text-overflow: ellipsis;
  color: #aaaaaa;
}

.special {
  border-top: 1rpx solid #eeeeee;
  border-bottom: 1rpx solid #eeeeee;
}

.icon {
  margin-right: 4rpx;
}

.info-bottom {
  display: flex;
  justify-content: center;
  width: 100%;
}

.log-out {
  width: 94%;
  height: 90rpx;
  margin-top: 5vh;
  line-height: 90rpx;
  border-radius: 15rpx;
  text-align: center;
  color: red;
  background-color: #fff;
}