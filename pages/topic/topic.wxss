/* pages/topic/topic.wxss */
.top-bar {
    display: flex;
    position: fixed;
    width: 100vw;
    height: 100rpx;
    top: 0;
    left: 0;
    right: 0;
    bottom: 100rpx;
    z-index: 1;
    opacity: 1;
}

.left-model,
.right-model {
    width: 50vw;
    display: flex;
    justify-content: center;
    align-items: center;
}

.is-checked {
    border-bottom: 2rpx solid #3399CC;
    color: #3399CC;
}

.normal {
    border-bottom: 2rpx solid #eeeeee;
    color: gray;
}

.main-continer {
    width: 692rpx;
    margin: 100rpx 32rpx 0 32rpx;
}

.swiper-wrap {
    min-height: 90vh;
}