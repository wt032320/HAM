/* pages/exam/exam.wxss */
.exam-wrap {
  width: 100vw;
  height: 100vh;
  background-color: #ffffff;
}

.prompt-wrap {
  width: 80vw;
  height: 40vh;
  margin-top: 20vh;
  margin-left: 70rpx;
}

.prompt-wrap .title {
  font-size: 50rpx;
  color: red;
}

.prompt-wrap .content {
  font-size: 35rpx;
  margin: 20rpx 0;
}

.prompt-wrap .check {
  margin: 140rpx 0 0 90rpx;
}

.prompt-wrap .btn {
  margin-top: 100rpx;
}

.top-bar {
  display: flex;
  justify-content: flex-start;
  width: 100vw;
  height: 120rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eeeeee;
}
 
.number-wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  color: #3399CC;
}

.count-down {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 40vw;
  height: 120rpx;
  margin-left: 30rpx;
}

.submit-btn {
  height: 120rpx;
  line-height: 120rpx;
  margin-left: 180rpx;
}

.count {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

 .swiper-wrap {
  width: 100vw;
  min-height: 80vh;
}

.bottom-bar {
  display: flex;
  position: fixed;
  width: 100vw;
  height: 100rpx;
  left: 0;
  right: 0;
  bottom: 120rpx;
  z-index: 1;
  background: white;
}

.left-model,
.right-model {
  width: 50vw;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card-title {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 50%;
  transform: translateX(-50rpx);
}

.numbers-wrap {
  width: 100%;
  min-height: 700rpx;
}

.numbers-wrap .number-content {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  border: 1rpx solid #3399CC;
}

.chose {
  background-color: #3399CC;
  color: #ffffff;
}